{% extends 'base.html.twig' %}

{% block title %}Reader index{% endblock %}

{% block body %}
    <h1>Reader index</h1>

    {{ form_start(form) }}
    {{ form_row(form.fullName) }}
    {{ form_row(form.email) }}
    <button class="btn btn-primary">Фільтрувати</button>
    {{ form_end(form) }}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FullName</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reader in readers %}
            <tr>
                <td>{{ reader.id }}</td>
                <td>{{ reader.fullName }}</td>
                <td>{{ reader.email }}</td>
                <td>
                    <a href="{{ path('app_reader_show', {'id': reader.id}) }}">show</a>
                    <a href="{{ path('app_reader_edit', {'id': reader.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reader_new') }}">Create new</a>

    <div class="pagination">
        {% if currentPage > 1 %}
            <a href="{{ path('app_reader_index', { page: currentPage - 1, itemsPerPage: itemsPerPage }) }}">Previous</a>
        {% endif %}
        <span>Page {{ currentPage }} of {{ totalPages }}</span>
        {% if currentPage < totalPages %}
            <a href="{{ path('app_reader_index', { page: currentPage + 1, itemsPerPage: itemsPerPage }) }}">Next</a>
        {% endif %}
    </div>

    <form method="get">
        <label for="itemsPerPage">Items per page:</label>
        <select name="itemsPerPage" onchange="this.form.submit()">
            <option value="2" {% if itemsPerPage == 2 %}selected{% endif %}>2</option>
            <option value="5" {% if itemsPerPage == 5 %}selected{% endif %}>5</option>
            <option value="10" {% if itemsPerPage == 10 %}selected{% endif %}>10</option>
        </select>
    </form>
{% endblock %}
