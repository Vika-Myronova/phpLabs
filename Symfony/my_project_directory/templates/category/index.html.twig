{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_end(form) }}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_category_new') }}">Create new</a>
    <div>
        <ul class="pagination">
            <li class="page-item {% if currentPage == 1 %}disabled{% endif %}">
                <a class="page-link" href="{{ path('app_category_index', { page: 1, itemsPerPage: itemsPerPage }) }}">First</a>
            </li>
            <li class="page-item {% if currentPage == 1 %}disabled{% endif %}">
                <a class="page-link" href="{{ path('app_category_index', { page: currentPage - 1, itemsPerPage: itemsPerPage }) }}">Previous</a>
            </li>
            <li class="page-item {% if currentPage == totalPages %}disabled{% endif %}">
                <a class="page-link" href="{{ path('app_category_index', { page: currentPage + 1, itemsPerPage: itemsPerPage }) }}">Next</a>
            </li>
            <li class="page-item {% if currentPage == totalPages %}disabled{% endif %}">
                <a class="page-link" href="{{ path('app_category_index', { page: totalPages, itemsPerPage: itemsPerPage }) }}">Last</a>
            </li>
        </ul>
    </div>

{% endblock %}
